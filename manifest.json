{
    "manifest_version" : 2,
    "name" : "ECPSfree",
    "version" : "1.0",
    "icons": {
        "48": "icons/icon48.png"
      },
    "browser_action": {
        "default_title": "ECPSfree",
        "default_icon": {
          "16":"icons/icon16.png",
          "48":"icons/icon48.png",
          "128":"icons/icon128.png"
        },  
        "default_popup": "plag.html"
  },
    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "css" : ["css/hotes.css"],
            "js" : [
                    "lib/my_brain.js",
                    "lib/dictionary.js",
                    "lib/index.js",
                    "note.js",
                    "load.js",
                    "checktypos.js",
                    "appraiser.js"
                  ],
            "run_at" : "document_end"
        }
        
    ],
    "web_accessible_resources": [
      "src/*",
      "src/dicts/*"
    ],

    "content_security_policy":"script-src 'self'; object-src 'self'"
}
